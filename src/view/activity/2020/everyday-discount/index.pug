    link(rel="stylesheet",type="text/css",href=`${_static('style/activity/2020/everyday-discount/index.scss')}`)

block pageContent
    main.page-content
        .main-background
            //- .title 春风十里不如你
            .time 活动时间：2020.3.20-2020.4.30
            a(href="#")
                .rule 活动细则
                    .inner 
        .main-countent
            .content-box
                .notice 本月【
                    span 云闪付
                    | 】立减额度已全部享受
                .discount-content
                    .discount-number
                        .text 今日可享立减
