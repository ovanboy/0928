    meta(name='description' content='hello everyonne')
    link(rel="stylesheet",type="text/css",href=`${_static('style/activity/2018/moon-festival/moon-festival.scss')}`)

block pageHeader

block pageContent
    img(src=`${_static('style/_asset/image/activity/2018/moon-festival/get-bg.png')}`).hide
    main.page-content.verticalCenter
        .wishesAndSignatureCon
            .wishesBg
            .signature.verticalCenter
                div.nameSpan
                span 祝您
                //span.line
        .mainContentCon
            .tipsAndRabbitCon
                .tipsCon
                    .presentBg
                    .msg.hide 买单吧新用户立享38元大礼包
                        | （内含10元话费）
