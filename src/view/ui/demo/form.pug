extends /_unit/base-3.0.pug


append data
    - var pageTitle = '表单示例'


append style
    link(rel="stylesheet",type="text/css",href=`${_static('public/keyboard/keyboard.css')}`)
    link(rel="stylesheet",type="text/css",href=`${_static('style/ui/demo/form.scss')}`)


block pageContent
    main.page-content
        .ui-panel
            .form-item
                .inner
                    .label 单选框组
                    .cont
                        .cont-inner
                            label.radio-item
                                span.ui-radio
                                    input(type="radio",name="radio-demo",value="01")
                                    span
                                | 选项1
                            label.radio-item
                                span.ui-radio
                                    input(type="radio",name="radio-demo",value="02")
                                    span
                                | 选项2
                            label.radio-item
                                span.ui-radio
                                    input(type="radio",name="radio-demo",value="03")
                                    span
                                | 选项3
            .form-item
                .inner
                    .label ajax 提交
                    .cont
                        label.cont-inner.switch-wrapper
                            span.state-info 关闭
                            span.ui-switch
                                input(type="checkbox")
                                span
        .ui-panel.form-group
            .form-item.action
                .inner
                    .label 目的地
                    .cont
                        .form-element.select-btn(data-placeholder="可选择多个国家或地区")
            .form-item.action
                .inner
                    .label 出发日期
                    .cont
                        .form-element.select-btn(data-placeholder="请选择")
            .form-item.action
                .inner
                    .label 返回日期
                    .cont
                        .form-element.select-btn(data-placeholder="请选择")
            .form-item.action
                .inner
                    .label 返回日期
                    .cont
                        .h5-keyboard-input.security-keyboard-input-box(data-source-name="demo",data-type="number",data-name="repwd",data-maxlength="6",data-placeholder="6位数字") 6位数字
            
        .ui-panel.form-group
            .form-item.action
                .inner
                    .label 目的地
                    .cont
                        .form-element.select-btn(data-placeholder="可选择多个国家或地区")
            .form-item.action
                .inner
                    .label 出发日期
                    .cont
                        .form-element.select-btn(data-placeholder="请选择")
            .form-item.action
                .inner
                    .label 返回日期
                    .cont
                        .form-element.select-btn(data-placeholder="请选择")
            .form-item.action
                .inner
                    .label 查询密码
                    .cont
                        .h5-keyboard-input.security-keyboard-input-box(data-source-name="demo",data-type="number",data-name="repwd",data-maxlength="6",data-placeholder="6位数字") 6位数字
            .form-item
                .inner
                    .label 手机号
                    .cont
                        .form-element.input-box
                            input(type="tel",placeholder="请输入手机号码",maxlength="11")
                            .clear-btn
            .form-item.has-right-btn
                .inner
                    .label 短信验证码
                    .cont
                        .form-element.input-box
                            input(type="text",placeholder="请输入短信验证码",maxlength="6")
                            .clear-btn
                .btn-box
                    button.btn(type="button") 发送
        .action-box
            button#btn-submit.ui-btn.primary.block 提交

append script
    script(src=`${_static('script/entry/ui/demo/form.js')}`)