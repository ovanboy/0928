        //- pay
        script#page-layer-content(type="text/template")
            .pay-layer
                .pay-info
                    | 实付金额(元)
                    br
                    em.price 8.30
                .ui-form-item.ui-select-item(data-action="cards")
                    input.ui-form-value-input(type="hidden",name="fieldname")
                    .ui-form-item-label 支付方式
                    .ui-form-item-cont 兴业银行信用卡 尾号6985
