extends /_unit/base-3.0.pug


append data
    - var pageTitle = '页面层组件'


append style
    link(rel="stylesheet",type="text/css",href=`${_static('style/ui/demo/module_page-layer.scss')}`)
    link(rel="stylesheet",type="text/css",href=`${_static('style/ui/demo/page-layer.scss')}`)


block pageContent
    main.page-content
        .ui-panel.content-btn-panel
            button#page-layer-btn.ui-btn.bigger.primary.block 页面弹层
        //- .ui-panel.content-btn-panel.bigger
